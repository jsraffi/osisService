@model OsisModel.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}
@section viewpagestyle
{
    <style type="text/css">

        #loginpage{
            background-image:url('/content/images/1000bbg4.png');
            padding-top:200px;
            padding-left:125px;
            height:700px;
            margin-left:-25px;
            
        }
        .loginHeader{
            
            color:white;
            font-size:28px;
            text-align:center;
        }
        .controlLabel{
            color:white;
        }
        .validation-summary-errors{ font-size:25px; font-weight:bold;color:white !important;}

        .field-validation-error {
            color:white !important;
        }
        
    </style>

}

<div id="loginpage">
    
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-8">
                        <h1 class="loginHeader">Please login using a valid account</h1>
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 controlLabel" })
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 controlLabel" })
                        </div>
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">@Html.LabelFor(m => m.RememberMe, new { @class = "controlLabel" })</div>
                        <div class="col-md-9">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-control checkboxlogin" })
                        </div>

                    </div>


                    <div class="form-group">
                        <div class="col-md-3"></div>
                        <div class="col-md-9">
                            <input type="submit" value="Log in to ormond system" class="btn btn-default widthandheight" />
                        </div>
                    </div>
                    @Html.ValidationSummary(true)
            }
        </section>
    </div>


    
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}