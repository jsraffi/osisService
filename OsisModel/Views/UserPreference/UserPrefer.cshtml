@model OsisModel.Models.AjaxUserPreference
<div style="font-size:15px">
    <p style="font-size:17px;font-weight:bold"> Please select a school and a academic year then save it</p>
    <p style="font-size: 17px; font-weight: bold"> Based on this selection appliactions data(students,invoices etc) will be available for manipulation</p>
     
</div>                  
@using (Ajax.BeginForm("UserPreferlist", "UserPreference", new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "userpreferencedata",
    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
}))
{
    @Html.AntiForgeryToken()
    <div style=" font-size:25px;">
        @Html.DropDownList("Schools",null,"Select a School", new { onchange = "$(this.form).submit();" })
        <input type="hidden" name="CurrentYear" id="CurrentYear" value="@ViewBag.CurrentYear" />
        <input type="hidden" name="Userid" id="Userid" value="@ViewBag.Userid" />
        <input type="hidden" name="loggedinuser" id="loggedinuser" value="@ViewBag.loggedinuser" />
    </div>
}
    <br />
    <br />
        @if (Model != null) 
        {
            { Html.RenderPartial("UserPreferlist"); }
        }
    
@section Scripts 
{
    
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>

    
    
}