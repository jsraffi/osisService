@model IEnumerable<OsisModel.Models.SchoolClassSingle>
@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = "School and Classs Listing";
}

<h1 class="h1padbot">List of schools with classes</h1>

<p>
    <h1>@Html.ActionLink("Create a new class", "Create")</h1>
</p>
<div id="list">
    <table class="table-bordered table-striped tableindex" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th>Operations</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.ActionLink("Edit Class", "Edit", new { id = item.ClassID })

                </td>
            </tr>
        }

    </table>
    </div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
